
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<section>
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-50">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card text-white" style="border-radius: 1rem; background-color: #007F54;">
                    <div class="card-body p-5 text-center">
                        <form class="mb-md-5 mt-md-4 pb-5" action="/Customer/XuLyDangNhap" method="post">
                            <h2 class="fw-bold mb-5 text-uppercase">Đăng nhập</h2>
                            <div class="form-outline form-white mb-5">
                                <label class="form-label text-white-50" for="typeEmailX">Email</label>
                                <input type="email" name="txtTenDN" id="typeEmailX" class="form-control form-control-lg" />
                            </div>
                            <div class="form-outline form-white mb-3">
                                <label class="form-label text-white-50" for="typePasswordX">Mật khẩu</label>
                                <input type="password" name="txtPassword" id="typePasswordX" class="form-control form-control-lg" />
                            </div>
                            <button class="btn btn-outline-light btn-lg shadow px-5 mb-0 mt-2" type="submit">Đăng nhập</button>
                            <p class="text-center text-white-50 mt-5 mb-0">
                                Bạn chưa có tài khoản? <a href="/Customer/DangKy" class="fw-bold text-primary"><u>Đăng ký miễn phí</u></a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>