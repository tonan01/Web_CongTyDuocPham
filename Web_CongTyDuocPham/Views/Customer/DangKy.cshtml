@model Web_CongTyDuocPham.Models.TAIKHOAN

@*@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/_LayoutPage1.cshtml";
}*@

@using (Html.BeginForm("XLDangKy", "Customer", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="modal fade" id="DangKy" aria-hidden="true" aria-labelledby="DangKy_Label" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card" style="background-color: #00008B; ">
                    <div class="card-body">
                        <h2 class="fw-bold text-center mb-5 text-white">ĐĂNG KÝ TÀI KHOẢN</h2>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <form>
                            <div class="form-outline mb-4">
                                <label class="form-label text-white-50">Email</label>
                                @Html.EditorFor(model => model.ID_USER, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class =
                                "form-control form-control-lg"
                                    }
                                })
                                @Html.ValidationMessageFor(model => model.ID_USER, "", new
                                {
                                    @class = "text-danger"
                                })
                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label text-white-50">Mật khẩu</label>
                                @Html.EditorFor(model => model.PASS, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class =
                                "form-control"
                                    }
                                })
                                @Html.ValidationMessageFor(model => model.PASS, "", new { @class = "text-danger" })
                            </div>

                            <div class="d-flex justify-content-center">
                                <button type="submit" data-bs-target="#DangNhap" data-bs-toggle="modal" data-bs-dismiss="modal"
                                        class="btn btn-outline-light btn-lg shadow px-5 mb-0 mt-2">
                                    Đăng ký
                                </button>
                            </div>

                            <p class="text-center text-white-50 mt-5 mb-0">
                                Bạn đã có tài khoản?
                                <a data-bs-target="#DangNhap" data-bs-toggle="modal" data-bs-dismiss="modal"
                                   class="fw-bold text-success">
                                    <u>Đăng nhập</u>
                                </a>
                            </p>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}